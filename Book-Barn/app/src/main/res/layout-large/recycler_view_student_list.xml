<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/recycler_view_student_image"
        android:layout_width="77dp"
        android:layout_height="69dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/bunny" />

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/reycler_view_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-condensed"
        android:maxLength="25"
        android:maxLines="2"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="28dp"
        android:text="@string/student_name_xlarge"
        android:textSize="35dp" />


    <ImageButton
        android:id="@+id/recycler_view_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="15dp"
        android:background="@color/colorWhite"
        android:src="@drawable/smallgarbage"
        android:layout_gravity="right|top"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

</RelativeLayout>
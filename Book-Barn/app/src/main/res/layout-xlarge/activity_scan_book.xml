<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activities.ScanBookActivity">

    <LinearLayout
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingTop="17dp"
            android:src="@drawable/bookshelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/textview_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/student_name"
            android:textColor="#000000"
            android:textSize="65dp" />

    </LinearLayout>




    <LinearLayout
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <ListView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/result_book_listview"
            android:layout_width="match_parent"
            android:layout_height="801dp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#000000"
            android:text="@string/add_new_book"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:id="@+id/book_scanner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:onClick="scanBar"
            android:src="@drawable/scanbookimage2" />


    </LinearLayout>

</LinearLayout>




